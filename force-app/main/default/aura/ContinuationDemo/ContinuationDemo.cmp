<aura:component implements="flexipage:availableForAllPageTypes" access="global">

    <aura:attribute name="count" type="Integer" default="2" />
    <aura:attribute name="result" type="Object" />

    <lightning:card title="ContinuationProxy Demo">
        <lightning:input type="text" label="Count:" value="{!v.count}" />
        <lightning:button label="Call Service" onclick="{!c.doInvoke}" />
        <lightning:textArea label="Continuation Result:" value="{!v.result}" />
    </lightning:card>

    <c:ContinuationProxy aura:id="proxy" />

</aura:component>